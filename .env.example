# Database Configuration
# For Docker deployment, use host.docker.internal or the Docker gateway IP
# Example: postgresql://toolibox_user:toolibox_pass_2024@host.docker.internal:5432/toolibox
DATABASE_URL="postgresql://username:password@localhost:5432/toolibox"

# JWT Secret (generate a random string)
JWT_SECRET="your-secret-key-here-change-this"
JWT_EXPIRES_IN="7d"

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="toolibox-backups"

# DeepSeek AI API
DEEPSEEK_API_KEY="your-deepseek-api-key"

# Node Environment
NODE_ENV="production"

# Backend URL (for Docker internal communication)
BACKEND_URL="http://backend-main:8000/api"
